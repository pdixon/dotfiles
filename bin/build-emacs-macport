#!/bin/zsh

patch -p0 <../emacs-24.1-mac-3.1/patch-mac
cp -R ../emacs-24.1-mac-3.1/mac ./
cp -R ../emacs-24.1-mac-3.1/etc/images/* ./etc/images
cp -R ../emacs-24.1-mac-3.1/src/* ./src
cp -R ../emacs-24.1-mac-3.1/mac ./
cp ../emacs-24.1-mac-3.1/lisp/term/mac-win.el ./lisp/term/
./configure --with-mac --prefix=`pwd`/mac/Emacs.app/Contents/Resources --exec_prefix=`pwd`/mac/Emacs.app/Contents/MacOS/
make
make install
