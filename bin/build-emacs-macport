#!/bin/zsh

patch -p0 <../emacs-24.2-mac-3.2/patch-mac
cp -R ../emacs-24.2-mac-3.2/mac ./
cp -R ../emacs-24.2-mac-3.2/etc/images/* ./etc/images
cp -R ../emacs-24.2-mac-3.2/src/* ./src
cp -R ../emacs-24.2-mac-3.2/mac ./
cp ../emacs-24.2-mac-3.2/lisp/term/mac-win.el ./lisp/term/
./configure --with-mac --prefix=`pwd`/mac/Emacs.app/Contents/Resources --exec_prefix=`pwd`/mac/Emacs.app/Contents/MacOS/
make
make install
