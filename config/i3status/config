       format = "â™ª: %devicename %volume"
       format_muted = "â™ª: %devicename ðŸ”‡"
       device = "pulse"
}

battery all {
        format = "%status %percentage (%remaining %consumption)"
	integer_battery_capacity = true
        status_chr = ðŸ”Œ
        status_bat = ðŸ”‹
        format_down = ""
}

time {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "%1min"
}
