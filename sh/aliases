# Command Enhancements

# Utility
alias reload='source ~/dotfiles/sh/aliases'
alias ea='$EDITOR ~/dotfiles/sh/aliases && reload' # Edit aliases
alias ee="$EDITOR ~/dotfiles/sh/env"

