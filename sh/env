# Set PATH, CDPATH, EDITOR, etc.
export PATH=~/dotfiles/bin:~/bin:~/Library/Haskell/bin:~/.gem/ruby/1.8/bin:~/.cabal/bin:~/.local/bin:$PATH

if [[ `uname` == "Darwin" ]]
then
    alias emacsclient='/opt/homebrew/bin/emacsclient'
fi

export EDITOR='emacsclient -nw'

export ALTERNATE_EDITOR=vim
# export EDITOR=vim

export LESSOPEN="| src-hilite-lesspipe.sh %s"
export LESS="-R"

export PYTHONSTARTUP=~/dotfiles/pythonrc.py

export GOROOT=~/go
if [[ `uname` == "Darwin" ]]
then
    export GOOS="darwin"
else
    export GOOS="linux"
fi
export GOARCH="amd64"

eval "$(rbenv init -)"
